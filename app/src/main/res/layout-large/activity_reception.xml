<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".SuperviserApp.ReceptionFiles.Reception">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/colorPrimaryDark"
        android:weightSum="100">

        <TextView
            android:id="@+id/tv_nomer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Номер"
            android:layout_marginStart="12dp"
            android:layout_weight="30"
            style="@style/TextTopBarWhite" />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="match_parent"
            android:text=" от "
            android:layout_marginStart="4dp"
            style="@style/TextTopBarWhite"
            android:layout_weight="10" />

        <TextView
            android:id="@+id/tv_data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="//дата "
            style="@style/TextTopBarWhite"
            android:layout_weight="30" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Заказчик: "
                        style="@style/TextBoldBlack" />

                    <TextView
                        android:id="@+id/tv_zakazchic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="89dp"
                        android:text="заказчик"
                        style="@style/TextPlainBlack" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Отправитель: "
                        style="@style/TextBoldBlack" />

                    <TextView
                        android:id="@+id/tv_otpravitel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="43dp"
                        android:text="отправитель"
                        style="@style/TextPlainBlack"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Получатель: "
                        style="@style/TextBoldBlack" />

                    <TextView
                        android:id="@+id/tv_poluchatel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="60dp"
                        android:text="получатель"
                        style="@style/TextPlainBlack"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:weightSum="100"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:id="@+id/tv_ves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="50"
                        android:ems="6"
                        style="@style/TextBoldBlack"
                        android:text="Вес факт" />

                    <EditText
                        android:id="@+id/et_ves_fact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:inputType="numberDecimal"
                        android:layout_weight="50"
                        android:ems="10"
                        style="@style/TextPlainBlack"
                        android:layout_toEndOf="@+id/tv_ves"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:id="@+id/tv_obem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="50"
                        android:text="Объем факт"
                        android:ems="6"
                        style="@style/TextBoldBlack" />

                    <EditText
                        android:id="@+id/et_obem_fact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="50"
                        android:ems="10"
                        android:inputType="numberDecimal"
                        style="@style/TextPlainBlack"
                        android:layout_toEndOf="@+id/tv_obem"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:id="@+id/tv_kol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="50"
                        android:text="Количество"
                        style="@style/TextBoldBlack"
                        android:ems="6"/>
                    <EditText
                        android:id="@+id/et_kolich"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="50"
                        android:ems="10"
                        android:layout_toEndOf="@+id/tv_kol"
                        android:inputType="numberDecimal"
                        style="@style/TextPlainBlack"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:id="@+id/tv_stoimostGruza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="50"
                        android:text="Стоимость груза"
                        style="@style/TextBoldBlack"
                        android:ems="6"/>
                    <EditText
                        android:id="@+id/et_stoimostGruza"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="50"
                        android:ems="10"
                        android:layout_toEndOf="@+id/tv_kol"
                        android:inputType="numberDecimal"
                        style="@style/TextPlainBlack"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp">

                    <TextView
                        android:id="@+id/tv_valuta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="57"
                        android:text="Валюта"
                        style="@style/TextBoldBlack"
                        android:ems="6"/>

                    <Spinner
                        android:id="@+id/spin_valuta"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="43"
                        android:ems="10"
                        style="@style/TextPlainBlack"
                        android:inputType="textPersonName" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Упаковка"
                        android:layout_weight="39"
                        style="@style/TextBoldBlack" />

                    <Spinner
                        android:id="@+id/spin_upakovka"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="61"
                        android:ems="10"
                        style="@style/TextPlainBlack"
                        android:inputType="textPersonName" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="10"
                        android:text="Груз поврежден"
                        style="@style/TextBlueBold" />

                    <CheckBox
                        android:id="@+id/cb_gruz_povrezhden"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="60" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lay_to_hide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:background="@drawable/rectangle_field"
                    android:paddingBottom="12dp">

                    <LinearLayout
                        android:id="@+id/hide_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:weightSum="100">

                        <ImageView
                            android:id="@+id/iw_camera_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="33"
                            app:srcCompat="@drawable/ic_camera_alt_black_24dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hide_lay1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et_message_povrezhden"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="20dp"
                            android:ems="20"
                            android:inputType="textMultiLine"
                            android:text="Text" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hide_lay2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100">

                        <TextView
                            android:id="@+id/kolich_fotok"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:paddingLeft="5dp"
                            style="@style/TextBlueBold"
                            android:text="Количество фотографий:" />

                        <TextView
                            android:id="@+id/foto_kol"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:gravity="center"
                            android:paddingRight="10dp"
                            android:text="0"
                            style="@style/TextPlainBlack"/>

                        <Button
                            android:id="@+id/del"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="40"
                            android:background="@color/otpravitelRed"
                            android:text="Удалить"
                            android:textColor="@android:color/white"/>


                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/relativeLay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="100"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp">

                            <TextView
                                android:id="@+id/tv_8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="20"                                android:text="Транспорт: "
                                style="@style/TextBlueBold" />


                            <AutoCompleteTextView
                                android:id="@+id/spin_transport"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="80"
                                style="@style/TextPlainBlack" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="100"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp">

                            <TextView
                                android:id="@+id/sopDoc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="50"
                                android:layout_gravity="center_vertical"
                                android:text="Сопроводительный документ"
                                style="@style/TextBlueBold" />

                            <Spinner
                                android:id="@+id/spinner_soprDoc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="50"
                                style="@style/TextPlainBlack"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sopr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:weightSum="100"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp">

                            <TextView
                                android:id="@+id/textView7"
                                style="@style/TextBlueBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="50"
                                android:ems="6"
                                android:text="Другое:"/>

                            <EditText
                                android:id="@+id/drug"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="50"
                                android:textSize="27dp"
                                android:ems="10"
                                android:hint="Введите название"
                                android:inputType="textPersonName" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="100">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="50"
                                android:ems="6"
                                android:text="Номер:"
                                android:textAppearance="@style/TextBlueBold" />

                            <EditText
                                android:id="@+id/sopnum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="50"
                                android:textSize="27dp"
                                android:ems="10"
                                android:inputType="textPersonName" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="100">

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="50"
                                android:ems="6"
                                android:text="Дата:"
                                android:textAppearance="@style/TextBlueBold" />

                            <EditText
                                android:id="@+id/sopdate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="50"
                                android:textSize="27dp"
                                android:ems="10"
                                android:inputType="date" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/l1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="2"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Менеджер: "
                                style="@style/TextBoldBlack" />

                            <TextView
                                android:id="@+id/tv_menedzher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="100"
                                android:text="Менеджер"
                                style="@style/TextPlainBlack" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Подразделение: "
                                style="@style/TextBoldBlack" />

                            <TextView
                                android:id="@+id/tv_podrazdel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Подразделение"
                                style="@style/TextPlainBlack" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Комментарий: "
                                style="@style/TextBoldBlack" />

                            <EditText
                                android:id="@+id/tv_comment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textAlignment="textStart"
                                android:inputType="textMultiLine"
                                android:hint="Комментарий"
                                style="@style/TextPlainBlack" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="8dp">
                <Button
                    android:id="@+id/btn_otpr"
                    android:layout_width="234dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Отправить"
                    style="@style/ButtonWhiteStyle"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>